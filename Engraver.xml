<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/ ..\FrameXML\UI.xsd">
	<Script file="Engraver.lua"/>
	<Button name="EngraverRuneButtonTemplate" inherits="ActionButtonTemplate,SecureActionButtonTemplate" virtual="true" mixin="EngraverRuneButtonMixin">
		<Size>
			<AbsDimension x="45" y="45" />
		</Size>
		<Scripts>
			<OnClick method="OnClick"/>
		</Scripts>
		<Layers>
			<Layer level="BORDER"/>
		</Layers>
	</Button>
	<Frame name="EngraverCategoryFrameTemplate" virtual="true" mixin="EngraverCategoryFrameMixin">
		<Size>
			<AbsDimension x="45" y="45" />
		</Size>
	</Frame>
	<Frame name="EngraverFrame" toplevel="true" frameStrata="LOW" enableMouse="true" movable="true" parent="UIParent" hidden="true" inherits="BackdropTemplate" mixin="EngraverFrameMixin">
		<Size>
			<AbsDimension x="45" y="45" />
		</Size>
		<Anchors>
			<Anchor point="TOPLEFT" relativeTo="UIParent" relativePoint="BOTTOMLEFT">
				<Offset>
					<AbsDimension x="400" y="400"/>
				</Offset>
			</Anchor>
		</Anchors>
		<Frames>
			<Frame parentKey="noRunesFrame" mixin="EngraverNoRunesFrameMixin">
				<Size x="135" y="135"/>
				<Anchors>
					<Anchor />
				</Anchors>
				<Layers>
					<Layer level="OVERLAY">
						<Texture name="$parentBackground" parentKey="background">
							<Color r="0" g="0.694" b="0.941" a="0.125"/>
						</Texture>
						<FontString name="$parent_EngraverLabel" inherits="GameFontNormal" justifyH="CENTER" text="Engraver" outline="THICK" parentKey="engraverLabel">
							<Size x="135" y="45"/>
							<Anchors>
								<Anchor point="TOP"/>
							</Anchors>
							<Color r="1" g="1" b="0"/>
						</FontString>
						<FontString name="$parent_NoRunesLabel" inherits="GameFontNormal" justifyH="CENTER" text="NO_RUNES" parentKey="noRunesLabel">
							<Size x="135" y="45"/>
							<Anchors>
								<Anchor point="CENTER"/>
							</Anchors>
							<Color r="1" g="1" b="1"/>
						</FontString>
						<FontString name="$parent_DragLabel" inherits="GameFontNormal" justifyH="CENTER" text="Right click to drag." parentKey="dragLabel">
							<Size x="135" y="45"/>
							<Anchors>
								<Anchor point="BOTTOM"/>
							</Anchors>
							<Color r="0" g="1" b="1"/>
						</FontString>
					</Layer>
				</Layers>
				<Scripts>
					<OnMouseDown method="OnMouseDown"/>
					<OnMouseUp method="OnMouseUp"/>
				</Scripts>
			</Frame>
			<Frame name="$parent_CategoryFrame1" parentKey="categoryFrame1" inherits="EngraverCategoryFrameTemplate" />
			<Frame name="$parent_CategoryFrame2" parentKey="categoryFrame2" inherits="EngraverCategoryFrameTemplate" />
			<Frame name="$parent_CategoryFrame3" parentKey="categoryFrame3" inherits="EngraverCategoryFrameTemplate" />
		</Frames>
		<Scripts>
			<OnLoad method="OnLoad"/>
			<OnEvent method="OnEvent"/>
		</Scripts>
	</Frame>
</Ui>
